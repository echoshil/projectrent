{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/spa",
  "installCommand": "pnpm install",
  "framework": null,

  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
