{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/spa",
  "installCommand": "pnpm install",
  "framework": null,

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ],

  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
